<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "user">
    
    <resultMap id = "resultUser" type = "schedule.model.User"> 
       <result property = "id" column = "id"/> 
       <result property = "login" column = "login"/> 
       <result property = "password" column = "password"/> 
    </resultMap> 

    <select id = "selectAll" resultMap = "resultUser"> 
       SELECT * FROM user;  
    </select> 
 
    <select id = "selectById" parameterType = "int" resultMap = "resultUser"> 
       SELECT * FROM user WHERE id = #{id}; 
    </select> 
    
    <insert id = "insert" parameterType = "schedule.model.User"> 
       INSERT INTO user (login, password)  
       VALUES (#{login}, #{password});     
    </insert>
    
    <update id = "update" parameterType = "schedule.model.User"> 
       UPDATE user SET 
        login = #{login}, 
        password = #{password} 
        WHERE id = #{id}; 
    </update>

    <delete id = "delete" parameterType = "int"> 
       DELETE from user WHERE id = #{id}; 
    </delete>
</mapper> 

